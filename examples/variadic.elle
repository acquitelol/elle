external fn printf(char *formatter, ...);

fn add(int size, ...) {
    variadic args[size * #size(int)];
    defer free(args);
    int res = 0;

    for int i = 0; i < size; i++ {
        res += args yield int;
    }

    return res;
}

pub fn main() {
    int res = add.(1, 2, 3, 4);
    printf("sum = %d\n", res);
    return 0;
}
